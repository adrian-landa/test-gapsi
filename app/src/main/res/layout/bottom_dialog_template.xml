<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTemplateTitle"
                    style="@style/Subtitle"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    tools:text="Titulo"
                    android:textAlignment="center"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <ImageView
                        android:id="@+id/imgTemplateIcon"
                        android:layout_width="@dimen/dimen_xlarge"
                        android:layout_height="@dimen/dimen_xlarge"
                        android:layout_margin="@dimen/dimen_short"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_history"/>

                <TextView
                        android:id="@+id/tvTemplateBody"
                        style="@style/Body1"
                        android:layout_margin="@dimen/dimen_short"
                        android:layout_width="match_parent"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>